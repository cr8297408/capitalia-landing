<style>
	.testimonials-section {
		background: linear-gradient(135deg, var(--gray-50) 0%, white 100%);
		padding: 6rem 0;
	}

	.section-header {
		text-align: center;
		margin-bottom: 4rem;
	}

	.section-title {
		font-size: 2.5rem;
		font-weight: 800;
		color: var(--gray-900);
		margin-bottom: 1rem;
		line-height: 1.2;
	}

	.section-description {
		font-size: 1.2rem;
		color: var(--gray-600);
		max-width: 600px;
		margin: 0 auto;
	}

	.testimonials-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
		gap: 2rem;
		margin-bottom: 4rem;
	}

	.testimonial-card {
		background: white;
		border: 1px solid rgba(37, 99, 235, 0.1);
		border-radius: 1.5rem;
		padding: 2rem;
		transition: all 0.3s ease;
		backdrop-filter: blur(20px);
	}

	.testimonial-card:hover {
		transform: translateY(-8px);
		box-shadow: 0 20px 40px rgba(37, 99, 235, 0.15);
		border-color: rgba(37, 99, 235, 0.3);
	}

	.testimonial-header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin-bottom: 1.5rem;
	}

	.user-info {
		display: flex;
		align-items: center;
		gap: 1rem;
	}

	.user-avatar {
		width: 50px;
		height: 50px;
		border-radius: 50%;
		object-fit: cover;
		border: 2px solid var(--primary-200);
	}

	.user-name {
		font-size: 1rem;
		font-weight: 600;
		color: var(--gray-900);
		margin-bottom: 0.25rem;
	}

	.user-title {
		font-size: 0.875rem;
		color: var(--gray-600);
		margin: 0;
	}

	.rating .stars {
		color: var(--accent-500);
		font-size: 1rem;
	}

	.testimonial-text {
		font-style: italic;
		color: var(--gray-700);
		line-height: 1.6;
		margin-bottom: 1.5rem;
		font-size: 1rem;
		border-left: 3px solid var(--primary-200);
		padding-left: 1rem;
		margin-left: 0;
	}

	.testimonial-stats {
		display: flex;
		gap: 2rem;
		padding-top: 1rem;
		border-top: 1px solid var(--gray-200);
	}

	.stat {
		text-align: center;
	}

	.stat-value {
		display: block;
		font-size: 1.25rem;
		font-weight: 700;
		color: var(--primary-600);
		margin-bottom: 0.25rem;
	}

	.stat-label {
		font-size: 0.75rem;
		color: var(--gray-600);
		text-transform: uppercase;
		letter-spacing: 0.5px;
	}

	.social-proof {
		text-align: center;
		background: linear-gradient(135deg, var(--primary-600) 0%, var(--secondary-600) 100%);
		border-radius: 1.5rem;
		padding: 3rem 2rem;
		color: white;
	}

	.proof-stats {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
		gap: 2rem;
	}

	.proof-stat {
		text-align: center;
	}

	.proof-number {
		font-size: 2rem;
		font-weight: 800;
		margin-bottom: 0.5rem;
	}

	.proof-label {
		font-size: 0.875rem;
		opacity: 0.9;
		text-transform: uppercase;
		letter-spacing: 0.5px;
	}

	@media (max-width: 768px) {
		.section-title {
			font-size: 2rem;
		}

		.testimonials-grid {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}

		.testimonial-card {
			padding: 1.5rem;
		}

		.testimonial-stats {
			gap: 1rem;
		}

		.proof-stats {
			grid-template-columns: repeat(2, 1fr);
		}

		.social-proof {
			padding: 2rem 1.5rem;
		}

		.proof-number {
			font-size: 1.5rem;
		}
	}
</style>